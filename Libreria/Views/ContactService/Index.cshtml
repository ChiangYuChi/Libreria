                            <option value="subscribe-member">訂閱會員</option>
                        </select>
                    </form>
                    <form action="">
                        <label for="">卡號：</label>
                        <input type="text" name="card-number">
                    </form>
                    <form action="">
                        <label for="">
                            帳號：
                        </label>
                        <input type="text" name="account">
                    </form>
                    <form action="">
                        <label for="">
                            姓名：
                        </label>
                        <input type="text" name="name">
                    </form>
                    <form action="">
                        <label for="">
                            <span class="starcolor">*</span>電子信箱：
                        </label>
                        <input type="text" name="email">
                    </form>
                    <form action="">
                        <label for="">
