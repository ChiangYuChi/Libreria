                                    <option value="886" placeholder="0912345678">+886(台灣)</option>
                                    <input type="tel" id="mobilephone">
                                </select>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <label class="form-subtitle col-3 col-xl-1 col-lg-2 text-right text-nowrap">市內電話</label>
                        <div class="form-content col-xl-4 col-lg-5 col-9 ">
                            <div class="form-row">
                                <input class="col-4" placeholder="市話區碼" type="tel">
                                <input class="col-5" placeholder="市話號碼" type="tel">
                                <input class="col-3" placeholder="分機" type="tel">
                            </div>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group row">
                        <label class="form-subtitle col-3 col-xl-1 col-lg-2 text-right text-nowrap">居住地</label>
                        <div class="form-content col-xl-4 col-lg-5 col-9">
                            <div class="habitation">
                                <div class="form-check-inline">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="optradio">台灣
                                    </label>
                                </div>
