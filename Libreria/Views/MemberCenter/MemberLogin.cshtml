@{ 
    List<OrderViewModel> OrderVMList = ViewBag.OrderVMList;

    int TotlePrice = 0;
    foreach(var OrderVM in OrderVMList)
    {
        TotlePrice += (int)OrderVM.OrderPrice;
    }

}

@section topCss{
    @*MemberLogin CSS*@
<link href="~/Asset/Css/MemberCenter/member_login.css" rel="stylesheet" />
}


<section class="member-center pb-5">
    <div class="container-fluid pt-5">
        <div class="row col-lg-10 m-auto">
            <div class="row   justify-content-center align-items-center col-sm-12 col-md-10 col-lg-12 m-auto p-0 ">
                <div class="breadcrumb-member w-100 ">
                    <a href="#">首頁</a>
                    <i class="fas fa-chevron-right"></i>
                    <a href="#">登入會員</a>
                </div>
            </div>

            <div class="row col-sm-11 col-md-10 col-lg-12 m-auto p-0 d-flex">

                <div class=" member-level d-flex flex-wrap ">
                    <div class="member-login-request d-none d-lg-block col-3 mt-5">
