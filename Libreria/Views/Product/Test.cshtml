@model List<ProductViewModel>

@section topCss{
    <link href="~/Asset/Css/Product/product_index.css" rel="stylesheet" />
    <link href="~/Asset/Css/Product/ProductCategory.css" rel="stylesheet" />
    <link href="~/Asset/Css/PartialView/category-sidenav.css" rel="stylesheet" />


}
@section topJs{
    <script src="https://kit.fontawesome.com/b4e5145ad1.js" crossorigin="anonymous"></script>
}



<div class="container-fluid col-12" style="padding-top: 80px;">
    <section class="product-index">
        <div class="main ">
            <div class="container-fluid">
                <div class="product-breadcrumb">
                    <a href="/Product/Index">首頁</a>
                    <i class="fas fa-chevron-right"></i>
                    <a href="#">商品分類</a>
                </div>
                <div class="row">

                    <div class="main-result col-lg-12 flex-wrap">


                        <div class="main-promotion col-lg-12 flex-wrap">
                            <div class="main-promotion-slider col-lg-9">
                                <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img class="d-block w-100 " src="~/Asset/Image/main-promotion-1.jpg"
                                                 alt="First slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100 " src="~/Asset/Image/main-promotion-2.jpg"
                                                 alt="Second slide">
                                        </div>

                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                       data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                       data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>

                            <div class="main-promotion-topic d-none d-md-block col-lg-3">
                                <h4>今日<span>最推薦</span></h4>
                                <div class="swiper-container">
                                    <div class="swiper-wrapper">
                                        @Html.Action("PromoteTodayPartial")
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                        <div class="new-product col-lg-12 d-flex">
                            @Html.Action("PromoteByPublishDatePartial")
                        </div>
                        <div class="new-product col-lg-12 d-flex">
                            <h3>編輯推薦</h3>
                            @Html.Action("PromoteByEditor")

                        </div>
                        <div class="new-product col-lg-12 d-flex main-hit">
                            <h3>主打選品</h3>
                            @Html.Action("PromoteMajor")
                        </div>
                        <div class="hot-issue col-lg-6">
                            <h3>熱門話題</h3>
                            @Html.Action("PromoteByTotalSalesPartial")
                        </div>
                        <div class="hot-issue col-lg-6">
                            <div class="pic col-lg-12">
                                <img src="~/Asset/Image/main-promotion-10.jpg" alt="">
                                <img src="~/Asset/Image/main-promotion-11.jpg" alt="">
                            </div>
                        </div>
                    </div>


                </div>


            </div>
        </div>
    </section>
</div>




@section EndJs{
    <script src="~/Asset/Js/Product/ProductCategory.js"></script>

    <script>
        function AddCart(id) {
            let productId = id;

            $.ajax({
                type: "POST",
                url: "/Order/AddToCart",
                data: { Id: productId },
                dataType: "text",
                success: function (response) {
                    alert(response);
                    $("#MyCart").text("購物車(" + response + ")");
                }
            });
        }

        function AddFavorite(id) {
            let favId = id

            $.ajax({
                type: "POST",
                url: "/MemberCenter/AddToFavorite",
                data: { Id: favId },
                dataType: "text",
                success: function (response) {
                    alert("成功");
                }
            });
        }
    </script>

}