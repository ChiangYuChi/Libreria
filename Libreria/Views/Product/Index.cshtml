
@section topCss{
    <link href="~/Asset/Css/Product/product_index.css" rel="stylesheet" />
    <link href="~/Asset/Css/Product/ProductCategory.css" rel="stylesheet" />
    <link href="~/Asset/Css/Product/swiper.css" rel="stylesheet" />
    <style>


        .swiper-container {
            width: 100%;
            height: 80%;
        }

        .swiper-slide {
            text-align: center;
            font-size: 18px;
            background: #fff;
         Center slide text vertically 
        display: -webkit-box;
            display: -ms-flexbox;
            display: -webkit-flex;
            display: flex;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            -webkit-justify-content: center;
            justify-content: center;
            -webkit-box-align: center;
            -ms-flex-align: center;
            -webkit-align-items: center;
            align-items: center;
        }
    </style>
}




<div class="container-fluid col-12 pt-5">
        <section class="product-index">
            <div class="main ">
                <div class="container-fluid ">

                    <div class="row">
                        <div class="main-promotion col-lg-12 flex-wrap">
                            <div class="main-promotion-slider col-lg-9">
                                <div id="carouselExampleControls" class="carousel slide " data-ride="carousel">
                                    <div class="carousel-inner">
                                        <div class="carousel-item active">
                                            <img class="d-block w-100 " src="~/Asset/Image/main-promotion-1.jpg"
                                                 alt="First slide">
                                        </div>
                                        <div class="carousel-item">
                                            <img class="d-block w-100 " src="~/Asset/Image/main-promotion-2.jpg"
                                                 alt="Second slide">
                                        </div>

                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                       data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                       data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>

                            <div class="main-promotion-topic d-none d-md-block col-lg-3">
                                <h4>今日<span>最推薦</span></h4>
                                <div class="swiper-container">
                                    <div class="swiper-wrapper">
                                     @Html.Action("PromoteTodayPartial")
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div>
                            </div>
                            <div class="swiper-pagination"></div>
                        </div>
                        <div class="new-product col-lg-12 d-flex">
                            @Html.Action("PromoteByPublishDatePartial")
                        </div>
                        <div class="new-product col-lg-12 d-flex">
                            <h3>編輯推薦</h3>
                            @Html.Action("PromoteByEditor")

                        </div>
                        <div class="new-product col-lg-12 d-flex main-hit">
                            <h3>主打選品</h3>
                            @Html.Action("PromoteMajor")
                        </div>
                        <div class="hot-issue col-lg-6">
                            <h3>熱門話題</h3>
                                @Html.Action("PromoteByTotalSalesPartial")
                        </div>
                        <div class="hot-issue col-lg-6" >
                            <div class="pic col-lg-12">

                                <img src="~/Asset/Image/main-promotion-10.jpg" alt="" />

                            </div>
                            <div class="pic col-lg-12">

                                <img src="~/Asset/Image/main-promotion-11.jpg" alt="" />

                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </section>
    </div>





@section endJs{
    <script src="~/Asset/Js/Product/swiper.js"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            pagination: {
                el: '.swiper-pagination',
            },
        });
    </script>
}


