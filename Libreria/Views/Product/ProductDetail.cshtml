<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <style>
       


        :root {
            --crimson-color: #bf0000;
            ;
        }


        .book-detail {
            font-family: 'Noto Sans TC', sans-serif;
        }

        .breadcrumb {
            margin-bottom: 30px;
            width: 100%;

        }

        .breadcrumb a {
            padding-right: 5px;
            text-decoration: initial;
        }

        .breadcrumb a+a:before {
            content: '/';
            color: black;
            padding-right: 5px;
        }

        .breadcrumb-sm a:before {
            content: '<';
            color: black;
            padding-right: 5px;
            font-size: 10px;
        }

        .detail-sm-bg .pic {
            background-image: url(./img/sm-book-bg.jpg);
            background-size: cover;

            height: 60px;
            background-repeat: no-repeat;
            position: relative;

        }

        .detail-cover .pic {
            cursor: pointer;
            text-align: center;
            margin: 0 auto;

        }


        .detail-cover .pic .pic-content {
            cursor: pointer;
            text-align: center;
            position: relative;
            border-top: 1px solid rgb(87, 104, 155, .1);
            border-left: 1px solid rgb(87, 104, 155, .1);
            border-right: 1px solid rgb(87, 104, 155, .1);
        }

        .detail-cover .pic:after {

            content: '';
            display: block;
            background-image: url(./img/detail-cover.png);
            padding-bottom: 14%;
            background-repeat: no-repeat;
            background-position: top;
            background-position-x: center;
            background-position-y: top;
            background-size: 100%;
        }

        .detail-cover .pic img {
            width: 100%;
        }

        .detail-cover .pic .pic-content .overlay {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background-color: rgba(0, 0, 0, 0.2);
            opacity: 0;
            transition: opacity 0.5s;
        }

        .detail-cover .pic:hover .overlay {
            opacity: 1;
        }

        .content hr {
            width: 100%;

        }

        .detail-preview {
            border-bottom: 2px solid #eeeeee;

        }

        .detail-save {
            padding-bottom: 20px
        }

        .detail-preview .fa-search,
        .detail-save .fa-arrow-to-bottom {
            color: black;
            padding-right: 10px;
            font-size: 16px;
        }

        .detail-save .fa-arrow-to-bottom {
            padding-right: 10px;
        }

        .detail-preview a,
        .detail-save a {
            text-decoration: none;
            font-size: 16px;
            color: var(--crimson-color)
        }

        .total-rating .fas {
            color: var(--crimson-color)
        }

        .special-deal {
            display: flex;
        }

        .special-deal .fa-tag {
            /* font-size: 20px; */
            color: white;
            background-color: var(--crimson-color);
            width: 35px;
            height: 25px;
            line-height: 25px;
            vertical-align: middle;
            text-align: center;
            border-radius: 100%;
            margin: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

        .special-deal p {
            font-weight: 300;
        }

        .special-deal a {
            text-decoration: underline;
        }


        .detail-title h1 {
            font-size: 26px;
            padding-top: 10px;
        }

        .detail-title h2 {
            font-size: 22px;
            color: #595959;
            font-weight: 300;
        }

        .detail-title h3 {
            font-size: 18px;
            font-weight: 300;
            color: var(--crimson-color);
        }

        .detail-title h3 span {
            color: black;
            padding-right: 10px;
        }

        .detail-title h5 {
            font-size: 18px;
            font-weight: 300;
        }

        .detail-title p {
            font-weight: 300;
            font-size: 15px;
        }

        .detail-title .hype {
            font-weight: 400;
            line-height: 25px;
        }

        .detail-pricing .box {
            border: 1px solid #e6e6e6;
            box-shadow: 0 0 7px #e6e6e6;
            height: auto;
            padding: 20px 15px;
            box-sizing: border-box;
        }

        .detail-pricing .pricing-title {
            font-size: 18px;
            font-weight: 300;
        }

        .detail-pricing button {
            width: 100%;
            border: none;
            margin-bottom: 10px;
            padding: 5px 0;
            font-size: 14px;
            color: white;
        }



        .detail-pricing .add-to-cart {
            background-color: var(--crimson-color);
            transition: all 1s;
        }

        .detail-pricing .add-to-cart:hover {
            background-color: white;
            border: 2px solid var(--crimson-color);
            color: black;

        }

        .detail-pricing .buy-now,
        .detail-pricing .add-to-wishlist {
            background-color: #595959;
            transition: all 1s;
        }


        .detail-pricing .buy-now:hover,
        .detail-pricing .add-to-wishlist:hover {
            border: 2px solid #595959;
            background-color: white;
            color: black;
        }

        .active-price {
            display: flex;
            margin: 25px 0;
            justify-content: space-between;
        }



        .footer {
            background-color: rgb(162, 118, 88);
            font-family: 'Montserrat', sans-serif;
            margin-top: 135px;
        }

        .footer-company h5,
        .footer-account h5,
        .footer-help h5 {
            color: black;
            font-weight: bold;
        }

        .footer-company a,
        .footer-account a,
        .footer-help a {
            color: black;
            font-size: 14px;
            text-decoration: none;
        }

        .footer a:hover {
            color: white;
            transition: ease-in .5s;

        }

        .footer .pic {

            text-align: center;
        }

        .footer .pic img {
            width: 50%;
            right: -180%;
        }

        .footer-phone {
            color: black;
            border-top: 1px solid black;
            margin-top: 15px;
            padding: 15px 0;
            font-size: 14px;
            letter-spacing: 1px
        }

        .footer-phone p span {
            margin-right: 10px;
        }

        .footer-phone .fas,
        .footer-phone .fab {
            padding-right: 10px;
            font-size: 20px;
        }

        .footer-phone .fab:hover {
            color: black;
            cursor: pointer;
            transition: ease-in .5s;
        }

        .detail-main {
            position: relative;

        }

        .detail-sm-bg {
            background-image: url(./img/sm-book-bg.jpg);
            height: 100px;
            position: absolute;

        }

        .lightbox-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 999;
            background: rgba(0, 0, 0, 0.6) !important;
            display: none;
        }

        .show {
            display: block;
        }


        .lightbox-item {
            min-height: 80vh;
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            border-radius: 0.3rem;
        }

        .lightbox-close {
            font-size: 3rem;
            transition: all 1s ease-in-out;
            cursor: pointer;
        }

        .lightbox-control {
            position: absolute;
            font-size: 4rem;
            color: white;
            transition: all 1s linear;
            cursor: pointer;
        }

        .lightbox-control .fas{
            font-size: 40px;
        }

        .btnLeft {
            top: 50%;
            left: 3%;
            transform: translateX(-60%);
        }

        .btnRight {
            top: 50%;
            right: 3%;
            transform: translateX(60%);
        }
        .preview-img-container {
            display: none;
        }
    </style>
</head>

<body>
    <section class="book-detail">
        <div class="container">
            <div class="row ">
                <div class="col-sm-12 breadcrumb d-none d-md-block">
                    <a href="#">首頁</a>
                    <a href="#">電子書</a>
                    <a href="#">企業與金融</a>
                    <a href="#">原子習慣</a>
                </div>
                <div class="breadcrumb breadcrumb-sm d-sm-block d-md-none"><a href="#">回到企業與金融</a> </div>
                <div class="detail-main ">
                    <!-- 商品區塊 -->
                    <!-- 預覽圖區塊 -->
                    <div class="row">
                        <div class="sidenav d-none d-md-block col-md-2 col-lg-3">
                            <a href="#">@Html.Action("CategoryPartial", "Category")</a>

                        </div>

                        @Html.Action("ProductDetailPartial","Product")
                                <div class="preview-img-container">
                                    <img src="./img/preview-img-2.png" class="book-img">
                                    <img src="./img/preview-img-3.png" class="book-img">
                                    <img src="./img/preview-img-4.png" class="book-img">
                                </div>
                                <div class="container-fluid ">
                                    <div class="row lightbox-container align-items-center">
                                        <div class="col-11 col-md-8  mx-auto text-right lightbox-holder">
                                            <span class="lightbox-close"><i class="fas fa-window-close"></i></span>
                                            <div class="lightbox-item col-10 col-md-11 m-auto"></div>
                                            <span class="lightbox-control btnLeft"><i class="fas fa-chevron-left"></i></span>
                                            <span class="lightbox-control btnRight"><i class="fas fa-chevron-right"></i></span>
                                        </div>
                                    </div>
                                </div>


                                <div class="content d-flex flex-wrap">
                                    <div class="detail-preview  col-6 col-sm-6 col-md-6 col-lg-12 border-0 preview-btn">
                                        <a href="#"><i class="fas fa-search"></i>立即預覽</a>
                                    </div>
                                    <hr class="d-none d-lg-block">
                                    <div class="detail-save  col-6 col-sm-6 col-md-6 col-lg-12">
                                        <a href="#">
                                            <i class="fas fa-arrow-to-bottom"></i>儲存預覽
                                        </a>
                                    </div>
                                </div>

                                <div class="total-rating d-none d-lg-block">
                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half"></i><span class="rating-num">(442)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- footer -->
    >

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous">
    </script>
</body>

<script>
    let previewBtn = document.querySelectorAll(".preview-btn");
    let lightbox = document.querySelector(".lightbox-container")
    let lightboxItem = document.querySelector(".lightbox-item");
    let lightboxClose = document.querySelector(".lightbox-close");
    let images = document.querySelectorAll(".book-img");
    let imageList = [];
    let imageCounter = 0;
    let btnLeft = document.querySelector('.btnLeft');
    let btnRight = document.querySelector('.btnRight');
    previewBtn.forEach(function (item) {
        item.addEventListener("click", function () {
            let img = document.querySelector(".preview-img").src;
            lightboxItem.style.backgroundImage = `url(${img})`;
            lightbox.classList.add("show");
        })
    })

    lightboxClose.addEventListener("click", function () {
        lightbox.classList.remove("show");
    })

    images.forEach(function (image) {
        imageList.push(image.src);

    })


    btnLeft.addEventListener('click', function () {
        imageCounter--;
        if (imageCounter < 0) {
            imageCounter = imageList.length - 1;
        }
        lightboxItem.style.backgroundImage = `url(${imageList[imageCounter]})`;
    })

    btnRight.addEventListener('click', function () {
        imageCounter++;
        if (imageCounter >= imageList.length) {
            imageCounter = 0;
        }
        lightboxItem.style.backgroundImage = `url(${imageList[imageCounter]})`;
    })


</script>

</html>