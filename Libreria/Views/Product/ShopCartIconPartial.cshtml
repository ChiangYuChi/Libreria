@model List<ShoppingCartViewModel>




<div class="shop-icon">
    <a class=" js-toggle-cart" href="#" title="View cart">

        <i class="fas fa-shopping-cart shop-cartid-icon"></i>
    </a>
</div>

<aside class="cart js-cart">
    <div class="cart__header">
        <h1 class="cart__title">購物車</h1>
        <p class="cart__text">
            <a class="cart-button button--light js-toggle-cart" href="#" title="Close cart">
                關閉購物車
            </a>
        </p>
    </div>
    <div class="cart__products js-cart-products">
        <p class="cart__empty js-cart-empty">
            目前是空的啊! 快去找本好書吧!
        </p>
        @foreach (var item in Model)
        {
            <div class="cart__product js-cart-product-template">
                <article class="js-cart-product">
                    <h1>@item.ProductName</h1>
                    <img src="@item.PicUrl" alt="書圖" />
                    <p class="price">@item.Price</p>
                    <p>
                        <a class="js-remove-product" href="#" title="Delete product">
                            刪除商品
                        </a>
                    </p>
                </article>
            </div>
        }

    </div>
    <div class="cart__footer">
        <p class="cart__text">
            <a class="cart-button" href="#" title="Buy products">
                購買
            </a>
        </p>
    </div>
</aside>

<div class="lightbox js-lightbox js-toggle-cart"></div>