@model ExhibitionVIewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section topCss{
    <script src="https://kit.fontawesome.com/d22f4b5afc.js" crossorigin="anonymous"></script>
    <link href="~/Asset/Css/Exhibition/Exhibition.css" rel="stylesheet" />
}

<div class="main-Exhibition container">
    <div class="ex-path">
        <ul>
            <li><a href="/Home/Index">首頁</a></li>
            <li><a href="#">展演</a></li>
        </ul>
    </div>
    <div class="ex-block-text">
        <p>
            當期展覽
        </p>
    </div>

    <!-- Button trigger modal -->
    <button type="button" class="btn main-btn col-12" data-toggle="modal" data-target="#exampleModal">

        <div class="main-Exhibition-pic">
            <img src="@Model.ExPhoto" class="w-100">
            <div class="text">
                <p>可點選閱讀詳細資訊!</p>
            </div>
        </div>
    </button>

    <!-- Modal -->
    <div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">@Model.ExName</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="ex-Main-pic">
                    <img src="@Model.ExPhoto" class="col-12">
                </div>
                <div class="modal-body">
                    <p>展覽日期: @Model.ExhibitionStartTime.ToString("yyyy年MM月dd日") - @Model.ExhibitionEndTime.ToString("yyyy年MM月dd日")</p>
                    <p>門票(新台幣/元): @Model.ExhibitionPrice.ToString("#0")</p>
                    <div class="intro">
                        @Model.ExHibitionIntro
                    </div>
                    <p>主辦單位: @Model.MasterUnit</p>
                    <p class="card-text"><small class="text-muted">更新日期:@Model.EditModifyDate.ToString("yyyy/MM/dd")</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>





<div class="container other-exhibition">
    <div class="ex-block-text">
        <p>
            預告展覽
        </p>
    </div>
    <div class="row">
        @{
            int notYetIndex = 0;
        }
        @foreach (var item in ViewBag.NotYetExhibitioning)
        {
            string id = "notYet" + notYetIndex;
            <div class="future-exhibition col-12 col-md-6 col-lg-4">
                <button type="button" class="btn col-sm-12 col-md-6 col-lg-4" data-toggle="modal" data-target="#@id">
                    <div class="card notYetCard">
