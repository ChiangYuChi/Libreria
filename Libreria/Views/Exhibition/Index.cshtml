@model ExhibitionVIewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    

}


@section topCss{

    <link href="~/Asset/Css/Exhibition/Exhibition.css" rel="stylesheet" />
}
<div class="main-Exhibition container">
    <!-- Button trigger modal -->
    <button type="button" class="btn main-btn col-12" data-toggle="modal" data-target="#exampleModal">

        <div class="main-Exhibition-pic col-12 ">
            <img src="@Model.ExPhoto" class="w-100">
        </div>
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">@Model.ExName</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="ex-Main-pic">
                    <img src="@Model.ExPhoto" class="col-12">
                </div>
                <div class="modal-body">
                    <p>展覽日期: @Model.ExhibitionStartTime.ToString("yyyy年MM月dd日") - @Model.ExhibitionEndTime.ToString("yyyy年MM月dd日")</p>
                    <p>門票: @Model.ExhibitionPrice</p>
                    <div class="intro">
                        @Model.ExHibitionIntro
                    </div>
                    <p>主辦單位: @Model.MasterUnit</p>
                    <p class="card-text"><small class="text-muted">更新日期:@Model.EditModifyDate</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="midsolid container">
    </div>
</div>





<div class="container other-exhibition">
    <div class="ex-block-text">
        <p>
            未來展覽
        </p>
    </div>
