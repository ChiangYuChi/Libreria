@model ExhibitionVIewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    

}


@section topCss{

    <link href="~/Asset/Css/Exhibition/Exhibition.css" rel="stylesheet" />
}
<div class="main-Exhibition container">
    <!-- Button trigger modal -->
    <button type="button" class="btn main-btn col-12" data-toggle="modal" data-target="#exampleModal">

        <div class="main-Exhibition-pic col-12 ">
            <img src="@Model.ExPhoto" class="w-100">
        </div>
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Model.ExName</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="ex-Main-pic">
                    <img src="@Model.ExPhoto" class="col-12">
                </div>
                <div class="modal-body">
                    @Model.ExHibitionIntro
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="midsolid container">
    </div>
</div>





<div class="container other-exhibition">
    <div class="ex-block-text">
        <p>
            未來展覽
        </p>
    </div>
    @foreach (var item in ViewBag.NotYetExhibitioning)
    {
        <div class="future-exhibition row col-12">
            <button type="button" class="btn col-sm-12 col-md-6 col-lg-4" data-toggle="modal" data-target="#ex2">
                <div class="card" style="width: 18rem;">
                    <img src="@item.ExPhoto" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.ExName</h5>
                        <p class="card-text">@item.ExHibitionIntro</p>
                    </div>
                </div>
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="ex2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">@item.ExName</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="ex-Main-pic">
                                <img src="@item.ExPhoto" class="col-12">
                            </div>
                            <div class="">
                                <p>展覽日期:@item.ExhibitionStartTime.ToString("yyyy年MM月dd日")-@item.ExhibitionEndTime.ToString("yyyy年MM月dd日")</p>
                                <p>門票:@item.ExhibitionPrice</p>
                                <div>
                                    @item.ExHibitionIntro
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }




    <div class="midsolid">
    </div>



    <div class="ex-block-text">
        <p>
            過去展覽
        </p>
    </div>
    @foreach (var item in ViewBag.OverdueExhibitioning)
    {
        <div class="ex-exhibition row col-12">
            <button type="button" class="btn col-sm-12 col-md-6 col-lg-4" data-toggle="modal" data-target="#ex6">
                <div class="card" style="width: 18rem;">
                    <img src="@item.ExPhoto" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.ExName</h5>
                        <p class="card-text">@item.ExHibitionIntro</p>
                    </div>
                </div>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="ex6" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="">
                                <p>展覽日期:@item.ExhibitionStartTime.ToString("yyyy年MM月dd日")-@item.ExhibitionEndTime.ToString("yyyy年MM月dd日")</p>
                                <p>門票:@item.ExhibitionPrice</p>
                                <div>
                                    @item.ExHibitionIntro
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }

</div>








